    <script>
        window.onload = function() {
            var previousYear = "@Model.share_interns.year"; //原資料庫的值
            var yearSelect = document.getElementById("yearSelect");
            for (var i = 0; i < yearSelect.options.length; i++) {
                if (yearSelect.options[i].value === previousYear) {
                    yearSelect.options[i].selected = true;
                    break;
                }
            }
        };

        $(document).ready(function(){
            $('[data-bs-toggle="popover"]').popover();   
        }); 

        var filesToDelete = [];
        function removeFile(fileId) {
            filesToDelete.push(fileId);
            var button = document.querySelector(`button[onclick='removeFile(${fileId})']`);
            button.parentNode.remove();
            
            // 確保在提交表單時將要刪除的檔案 ID 發送到後端
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'FilesToDelete';
            input.value = fileId;
            document.forms[0].appendChild(input);
        }
    </script>

